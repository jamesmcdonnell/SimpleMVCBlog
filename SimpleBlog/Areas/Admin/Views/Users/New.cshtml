@model SimpleBlog.Areas.Admin.ViewModels.UsersNew

<h1>New User</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor((f => f.Username))
        @Html.TextAreaFor(f => f.Username, new{@class="form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor((f => f.Email))
        @Html.TextAreaFor(f => f.Email, new{@class="form-control", type="email"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor((f => f.Password))
        @Html.TextAreaFor(f => f.Password, new{@class="form-control"})
    </div>
    
    <input type="submit" value="Create User" class="btn btn-primary"/>
    <a href="@Url.Action("Index")">or cancel</a>
}